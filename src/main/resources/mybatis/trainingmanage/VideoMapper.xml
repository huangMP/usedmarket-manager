<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="VideoMapper">
	
	<!--表名 -->
	<sql id="tableName">
		TR_VIDEO
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		LESSON_ID,	
		FILE_PATH,	
		TITLE,	
		IMG_PATH,	
		ADD_USER,	
		ADD_TIME,	
		VIDEO_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{LESSON_ID},	
		#{FILE_PATH},	
		#{TITLE},	
		#{IMG_PATH},	
		#{ADD_USER},	
		#{ADD_TIME},	
		#{VIDEO_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			VIDEO_ID = #{VIDEO_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			LESSON_ID = #{LESSON_ID},
			FILE_PATH = #{FILE_PATH},
			TITLE = #{TITLE},
			IMG_PATH = #{IMG_PATH},
			ADD_USER = #{ADD_USER},
			ADD_TIME = #{ADD_TIME},
		VIDEO_ID = VIDEO_ID
		where 
		VIDEO_ID = #{VIDEO_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VIDEO_ID = #{VIDEO_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
					LESSON_ID =  #{pd.keywords} 
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			VIDEO_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 通过lessonId数组查找 -->
	<select id="findByLessonIdArray" parameterType="String" resultType="pd">
		select 
		<include refid="Field"></include> 
		from
		<include refid="tableName"></include>
		where 
			LESSON_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</select>
	
	<!-- 通过lessonId数组批量删除item -->
	<delete id="deleteByLessonIdArray" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			LESSON_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 通过LESSON_ID获取数据 -->
	<select id="findByLessonId" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			LESSON_ID = #{LESSON_ID}
	</select>
	
</mapper>